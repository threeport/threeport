ARG ARCH=amd64
FROM golang:1.22 as builder
RUN mkdir /build
ADD . /build
WORKDIR /build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=${ARCH} go build -a -o rest-api cmd/rest-api/main_gen.go

FROM gcr.io/distroless/static:nonroot
COPY --from=builder /build/rest-api /
USER 65532:65532
ENTRYPOINT ["/rest-api"]
