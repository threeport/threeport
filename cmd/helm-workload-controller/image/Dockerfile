# generated by 'threeport-sdk gen' but will not be regenerated - can optionally be edited
ARG ARCH=amd64
FROM golang:1.22 as builder
RUN mkdir /build
ADD . /build
WORKDIR /build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=${ARCH} go build -a -o helm-workload-controller cmd/helm-workload-controller/main_gen.go

FROM gcr.io/distroless/static:nonroot
COPY --from=builder /build/helm-workload-controller /
ENV HELM_CACHE_HOME=/var/helm/.cache/helm
RUN mkdir -p /var/helm /var/helm/.cache/helm && \
    chown -R 65532:65532 /var/helm
USER 65532:65532

ENTRYPOINT ["/helm-workload-controller"]
