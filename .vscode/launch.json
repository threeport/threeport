{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40000,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "log",
            "logOutput": "rpc"
        },
        {
            "name": "Debug e2e tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/test/e2e/e2e_workload_test.go",
        },
        {
            "name": "tptdev debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tptdev",
            "cwd": "${workspaceFolder}",
            "args": [
                "debug",
                "--threeport-config=dev-0.yaml",
                "--component-names=workload-controller",
                "--control-plane-name=dev-0",
            ],
        },
        {
            "name": "tptdev build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tptdev",
            "cwd": "${workspaceFolder}",
            "args": [
                "build",
                "--all",
                "--push",
                "--arch=amd64",
                // "--control-plane-image-repo=",
                // "--control-plane-image-tag=",
            ],
        },
        {
            "name": "tptdev up",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tptdev",
            "cwd": "${workspaceFolder}",
            "args": [
                "up",
                "--force-overwrite-config",
                // "--threeport-config=",
                // "--auth-enabled=true",
            ],
        },
        {
            "name": "Debug tptctl",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/tptctl",
            "args": [
                "create",
                "control-plane",
                "--provider=eks",
                "--name=test",
                "--provider-account-id=575822346426",
                "--aws-region=us-east-1",
                "--aws-config-profile=default",
            ],
        },
        {
            "name": "Debug workload-controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/workload-controller",
            "args": [
                "-api-server=localhost:1323",
                "-msg-broker-host=localhost",
                "-msg-broker-port=4222",
                "--auth-enabled=false",
            ],
        },
        {
            "name": "Debug gateway-controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gateway-controller",
            "args": [
                "-api-server=localhost:1323",
                "-msg-broker-host=localhost",
                "-msg-broker-port=4222",
                "--auth-enabled=false",
            ],
        },
    ]
}
